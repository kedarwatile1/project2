pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build stage'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage'
            }
        }
 stage('Deploy to Minikube') {
            steps {
                script {
                    sh '''
                    kubectl apply -f deployment.yaml
                    kubectl expose deployment nginx-deployment --type=NodePort --port=80
                    '''
                }
            }
        }
    }
}
